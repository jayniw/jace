{% extends "layout.html" %}

{% block title %}Refacturacion{% endblock %}

{% block content %}
  <div id="content">
    {# formulario para registro de grupo a facturar #}
    <div>
    <form method="POST">
      <label for="">Grupo:</label>
      <input type="text" class="sel" name="grupo" size="15" required>
      <label for="">Motivo:</label>
      <input type="text" class="sel" name="motivo" size="70" required>
      <button type="submit" name="submit" value="Buscar" class="btncito">
        Registrar
      </button>
    </form>
    </div><br>
    {% if grid is not null %}
      {{ component_render(grid) }}
    {% endif %}

  </div>
{% endblock %}